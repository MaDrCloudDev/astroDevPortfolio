---
import Layout from "../layouts/Layout.astro";
import NavbarPages from "../components/NavbarPages";
import SmallButton from "../components/SmallButton.astro";
---

<Layout title='astroConversion | MaDr'>
	<NavbarPages client:only='react' />
	<div class='w-full overflow-hidden'>
		<div class='w-screen h-[50vh] relative'>
			<div class='absolute top-0 left-0 w-full h-[50vh] z-5 bg-black/60'></div>
			<img
				class='absolute z-[-500]'
				src='https://raw.githubusercontent.com/MaDrCloudDev/projectsImages/master/astroconversion.webp'
				alt='/'
			/>
			<div
				class='absolute text-3xl font-bold top-[70%] max-w-[1240px] w-full left-[50%] right-[50%] translate-x-[-50%] translate-y-[-50%] text-white p-2'>
				<h2 class='py-2 text-yellow-400'>astroConversion</h2>
				<h3>Astro</h3>
			</div>
		</div>
		<div class='mx-auto p-10 grid md:grid-cols-5 gap-8 pt-8 bg-black'>
			<div class='col-span-4'>
				<p class='text-xl font-bold text-yellow-400 mb-4'>Description</p>
				<p class='mb-4'>
					A traditional HTML, CSS, and JS website converted into an Astro site
					using Astro components, layouts, and pages
				</p>
				<h2 class='text-lg text-blue-600 mb-4'>Overview</h2>
				<p class='mb-4'>
					Based on the{" "}
					<a
						class='text-yellow-400'
						href='https://github.com/bradtraversy/astro-crash-course'>
						Astro Crash Course tutorial by Brad Traversy
					</a>
					, I converted an old-school website (where the HTML, CSS, JS, and each
					individual page were their own separate files) into a modern Astro site
					using all of Astro's features.
				</p>
				<a
					href='https://astroconversion.madr.io/'
					target='_blank'
					rel='noreferrer'>
					<SmallButton text='Demo' />
				</a>
				<a
					href='https://github.com/MaDrCloudDev/astroconversion'
					target='_blank'
					rel='noreferrer'>
					<SmallButton text='Code' />
				</a>
			</div>
			<div
				class='col-span-4 md:col-span-1 shadow-lg shadow-gray-700 rounded-xl p-4'>
				<div class='p-2'>
					<p class='text-center font-bold pb-2 text-yellow-400'>Technologies</p>
					<div class='grid grid-cols-3 md:grid-cols-1'>
						<p class='text-gray-200 py-2 flex items-center'>
							<bullet class='text-4xl mr-2 text-blue-600'>&bull;</bullet>
							Astro
						</p>
					</div>
				</div>
			</div>
			<div class='flex w-[225%] justify-between'>
				<a href='/#projects'>
					<p class='text-xl font-bold underline cursor-pointer text-yellow-400'>
						&larr; Back to all projects
					</p>
				</a>
				<a href='/astrodocumentationtheme'>
					<p class='text-xl font-bold underline cursor-pointer text-yellow-400'>
						&rarr; Next project
					</p>
				</a>
			</div>
		</div>
	</div>
</Layout>
